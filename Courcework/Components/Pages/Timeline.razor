@page "/timeline"

<MudStack Spacing="4" Class="page-stack">
    <div class="timeline-header">
        <MudText Typo="Typo.h5"><strong>Timeline</strong></MudText>
        <MudText Typo="Typo.body2" Class="muted">Browse your journal entries</MudText>
    </div>

    <!-- Filter Section -->
    <MudPaper Class="filters-paper" Elevation="3">
        <MudStack Spacing="3">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.FilterAlt" Size="Size.Medium" />
                <MudText Typo="Typo.h6"><strong>Filter Entries</strong></MudText>
            </MudStack>
            
            <MudGrid Spacing="3">
                <MudItem xs="12" sm="6" md="3">
                    <MudTextField T="string" 
                                  Label="Search" 
                                  Placeholder="Title or content" 
                                  Variant="Variant.Outlined"
                                  FullWidth="true" />
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <div>
                        <MudText Typo="Typo.caption"><strong>Moods</strong></MudText>
                        <MudStack Row="true" Spacing="1" Class="mt-2">
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Calm</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Grateful</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Stressed</MudButton>
                        </MudStack>
                    </div>
                </MudItem>
                <MudItem xs="12" sm="6" md="3">
                    <div>
                        <MudText Typo="Typo.caption"><strong>Tags</strong></MudText>
                        <MudStack Row="true" Spacing="1" Class="mt-2">
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Work</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Gratitude</MudButton>
                            <MudButton Size="Size.Small" Variant="Variant.Outlined" Color="Color.Primary">Reflection</MudButton>
                        </MudStack>
                    </div>
                </MudItem>
            </MudGrid>
        </MudStack>
    </MudPaper>

    <!-- Entry Cards Grid -->
    <MudGrid Spacing="3" Class="entries-grid">
        @foreach (var entry in new[] 
        {
            (Title: "Morning reflections", Date: "12/20/2025", Mood: "Calm", Snippet: "Quick thoughts about the day."),
            (Title: "Project wrap-up", Date: "12/19/2025", Mood: "Grateful", Snippet: "Celebrated shipping the release."),
            (Title: "Midweek check-in", Date: "12/18/2025", Mood: "Stressed", Snippet: "Lots of meetings, but made progress.")
        })
        {
            <MudItem xs="12" sm="12" md="4" lg="4">
                <MudPaper Class="entry-card" Elevation="3">
                    <MudStack Spacing="3" Style="height: 100%;">
                        <!-- Header -->
                        <div>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Wrap="Wrap.Wrap">
                                <MudText Typo="Typo.subtitle2"><strong>@entry.Date</strong></MudText>
                                <MudChip T="string" Value="@entry.Mood" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Small">@entry.Mood</MudChip>
                            </MudStack>
                        </div>

                        <!-- Title and Preview -->
                        <div>
                            <MudText Typo="Typo.h6" Class="truncate"><strong>@entry.Title</strong></MudText>
                            <MudText Typo="Typo.body2" Class="muted entry-snippet">@entry.Snippet</MudText>
                        </div>

                        <!-- Spacer -->
                        <MudSpacer />

                        <!-- Footer -->
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="footer-section">
                            <MudButton Variant="Variant.Text" Size="Size.Small" Color="Color.Primary" Class="open-button">
                                Open ?
                            </MudButton>
                            <MudText Typo="Typo.caption" Class="muted">Updated today</MudText>
                        </MudStack>
                    </MudStack>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>

    <!-- Pagination -->
    <div class="pagination-wrapper">
        <MudPagination Selected="1" Count="5" />
    </div>
</MudStack>

